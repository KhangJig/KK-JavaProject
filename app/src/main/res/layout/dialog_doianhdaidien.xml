<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="200dp">
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Chọn"
        android:textColor="@color/pink"
        android:fontFamily="@font/rix_love_fool"
        android:textSize="30sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewTitle"
        android:background="#03bd70" />

    <LinearLayout
        android:id="@+id/linearLayout_dialog"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/view1"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageCamera"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icon_camera" />

            <TextView
                android:id="@+id/textViewCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Máy ảnh"
                android:fontFamily="@font/rix_love_fool"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageFolder"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icon_find_folder" />

            <TextView
                android:id="@+id/textViewThuVien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Thư mục"
                android:fontFamily="@font/rix_love_fool"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>